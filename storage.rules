rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == "binblastcompany@gmail.com";
    }
    
    // Helper function to check if user is operator
    function isOperator() {
      return isAuthenticated() && request.auth.token.email == "keyjboone@gmail.com";
    }
    
    // Helper function to check if user is admin or operator
    function isAdminOrOperator() {
      return isAdmin() || isOperator();
    }
    
    // Training modules - public read access, authenticated write for admin/operator
    match /training-modules/{fileName} {
      // Public read access for all training PDFs
      allow read: if true;
      
      // Only admin/operator can upload/update training PDFs
      allow write: if isAdminOrOperator();
      
      // Delete only by admin/operator
      allow delete: if isAdminOrOperator();
    }
    
    // Job photos - employees can upload for their assigned jobs, operators/admins can read all
    match /job-photos/{jobId}/{photoType}/{fileName} {
      // Employees can upload photos for jobs assigned to them (checked via API route)
      // Operators and admins can read all job photos
      allow read: if isAuthenticated();
      
      // Upload is handled via API route which verifies job assignment
      // Storage rules allow authenticated uploads (API route enforces permissions)
      allow write: if isAuthenticated();
      
      // Only operators/admins can delete photos
      allow delete: if isAdminOrOperator();
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
