rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin email
    function adminEmail() {
      return "binblastcompany@gmail.com";
    }
    
    // Operator email
    function operatorEmail() {
      return "keyjboone@gmail.com";
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == adminEmail();
    }
    
    // Helper function to check if user is operator
    function isOperator() {
      return isAuthenticated() && request.auth.token.email == operatorEmail();
    }
    
    // Helper function to check if user is admin or operator
    function isAdminOrOperator() {
      return isAdmin() || isOperator();
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      // Users can read their own document, admins and operators can read all, server-side can read all
      allow read: if isOwner(userId) || isAdminOrOperator() || request.auth == null;
      
      // Users can create their own document (during registration)
      // Allow creation with required fields and optional fields like role, phone, plan, etc.
      // Email must match auth token email (Firebase Auth normalizes emails to lowercase)
      allow create: if isOwner(userId) 
        && request.resource.data.keys().hasAll(['firstName', 'lastName', 'email'])
        && request.resource.data.firstName is string
        && request.resource.data.lastName is string
        && request.resource.data.email is string
        && request.resource.data.email == request.auth.token.email;
      
      // Users can update their own document
      // Operators can update internal notes and service status for operations management
      // Also allow server-side updates (from API routes) that maintain data integrity
      allow update: if (
        // Client-side: user updating their own document (can update referralCode, referralCount)
        (isOwner(userId) && request.resource.data.email == resource.data.email)
        ||
        // Operator: can update internalNotes, servicePaused, and serviceArea for operations management
        (isOperator() && 
         request.resource.data.email == resource.data.email && // Can't change email
         request.resource.data.firstName == resource.data.firstName && // Can't change name
         request.resource.data.lastName == resource.data.lastName && // Can't change name
         request.resource.data.phone == resource.data.phone && // Can't change phone
         // Only allow updates to operational fields
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['internalNotes', 'servicePaused', 'serviceArea', 'updatedAt']))
        ||
        // Server-side: API route updating subscription-related or referral-related fields
        // This allows the change-subscription API and referral API to update specific fields
        // Note: Server-side requests have request.auth == null
        (request.auth == null && 
         request.resource.data.email == resource.data.email && // Can't change email
         // Allow updates to subscription-related fields only
         (request.resource.data.firstName == resource.data.firstName &&
          request.resource.data.lastName == resource.data.lastName &&
          request.resource.data.phone == resource.data.phone)
         ||
         // Allow updates to referral-related fields (referralCount, referredBy, referredByCode, referralCodeUsed)
         // These can be updated by the referral API
         (request.resource.data.firstName == resource.data.firstName &&
          request.resource.data.lastName == resource.data.lastName &&
          request.resource.data.phone == resource.data.phone &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['referralCount', 'referredBy', 'referredByCode', 'referralCodeUsed', 'updatedAt']))
        )
      );
      
      // Users cannot delete their own document (admin only)
      allow delete: if false;
    }
    
    // Subscriptions collection - users can only access their own subscriptions
    match /subscriptions/{subscriptionId} {
      // Users can read their own subscriptions
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can create their own subscriptions
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own subscriptions
      allow update: if isAuthenticated() 
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == resource.data.userId; // Can't change userId
      
      // Users cannot delete subscriptions (admin only)
      allow delete: if false;
    }
    
    // Service addresses collection - users can only access addresses linked to their subscriptions
    match /serviceAddresses/{addressId} {
      // Users can read addresses linked to their subscriptions
      allow read: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // Users can create addresses for themselves
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own addresses
      allow update: if isAuthenticated() 
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == resource.data.userId;
      
      // Users can delete their own addresses
      allow delete: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
    }
    
    // Scheduled cleanings collection - users can manage their own scheduled cleanings
    match /scheduledCleanings/{cleaningId} {
      // Users can read their own scheduled cleanings
      // Employees can read jobs assigned to them (assignedEmployeeId == request.auth.uid)
      // Admins and operators can read all
      // Server-side API routes can read all (request.auth == null)
      allow read: if (
        (isAuthenticated() && resource.data.userId == request.auth.uid) 
        || (isAuthenticated() && resource.data.assignedEmployeeId == request.auth.uid)
        || isAdminOrOperator()
        || request.auth == null // Server-side reads (API routes)
      );
      
      // Users can create scheduled cleanings for themselves
      // Operators/admins can create cleanings and assign them to employees
      allow create: if (
        (isAuthenticated() 
        && request.resource.data.userId == request.auth.uid
          && request.resource.data.keys().hasAll(['userId', 'userEmail', 'addressLine1', 'city', 'state', 'zipCode', 'trashDay', 'scheduledDate', 'scheduledTime', 'status']))
        || isAdminOrOperator() // Operators/admins can create and assign jobs
      );
      
      // Users can update their own scheduled cleanings (e.g., cancel, reschedule)
      // Employees can update jobs assigned to them (job status, completion data, flags)
      // Operators can update any scheduled cleaning (for operations management)
      allow update: if (
        (isAuthenticated() 
          && resource.data.userId == request.auth.uid
          && request.resource.data.userId == resource.data.userId) // Can't change userId
        || (isAuthenticated() 
          && resource.data.assignedEmployeeId == request.auth.uid
          && request.resource.data.assignedEmployeeId == resource.data.assignedEmployeeId) // Employee updating assigned job
        || isAdminOrOperator() // Operators/admins can update any cleaning and assign jobs
      );
      
      // Users can delete their own scheduled cleanings
      allow delete: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
    }
    
    // Clock-ins collection - employees can manage their own clock-in records
    match /clockIns/{clockInId} {
      // Employees can read their own clock-in records
      // Operators and admins can read all clock-in records
      // Allow list queries for employees (to query by employeeId)
      // For list queries, Firestore will filter results based on the query's where clause
      // So employees can query where employeeId == their own UID
      allow list: if (
        isAuthenticated() // Employees can list - Firestore will filter by query where clause
        || isAdminOrOperator()
        || request.auth == null // Server-side reads
      );
      allow get: if (
        (isAuthenticated() && resource.data.employeeId == request.auth.uid)
        || isAdminOrOperator()
        || request.auth == null // Server-side reads
      );
      
      // Employees can create their own clock-in records
      // Server-side can create clock-in records (from API routes)
      allow create: if (
        (isAuthenticated() 
          && request.resource.data.employeeId == request.auth.uid
          && request.resource.data.keys().hasAll(['employeeId', 'employeeEmail', 'clockInTime', 'date', 'isActive']))
        || request.auth == null // Server-side creates
      );
      
      // Employees can update their own active clock-in records (clock out)
      // Server-side can update any clock-in record
      allow update: if (
        (isAuthenticated() 
          && resource.data.employeeId == request.auth.uid
          && resource.data.employeeId == request.resource.data.employeeId) // Can't change employeeId
        || request.auth == null // Server-side updates
      );
      
      // No deletions allowed
      allow delete: if false;
    }
    
    // Referrals collection - server-side only (created by API routes)
    match /referrals/{referralId} {
      // Users can read referrals where they are the referrer or referred user
      // This allows both individual reads and list queries
      // Also allow server-side API routes to read (for get-credits, etc.)
      allow read: if isAuthenticated() 
        && (resource.data.referrerId == request.auth.uid || resource.data.referredUserId == request.auth.uid)
        || request.auth == null; // Allow server-side reads
      
      // Only server-side API routes can create/update referrals
      allow create, update: if request.auth == null;
      
      // No deletions allowed
      allow delete: if false;
    }
    
    // Credits collection - users can read their own credits
    match /credits/{creditId} {
      // Users can read their own credits
      // This allows both individual reads and list queries
      // Also allow server-side API routes to read (for get-credits endpoint)
      allow read: if (isAuthenticated() 
        && resource.data.userId == request.auth.uid)
        || request.auth == null; // Allow server-side reads
      
      // Only server-side API routes can create/update credits
      allow create, update: if request.auth == null;
      
      // No deletions allowed
      allow delete: if false;
    }
    
    // PartnerApplications collection - partner applications before approval
    match /partnerApplications/{applicationId} {
      // Users can read their own application (by userId or email), admins can read all
      allow read: if (
        (isAuthenticated() && (
          resource.data.userId == request.auth.uid ||
          resource.data.email == request.auth.token.email
        ))
        || isAdmin() // Allow admin to read all applications
        || request.auth == null // Allow server-side reads (for API routes)
      );
      
      // Users can create their own application (client-side) - userId is optional
      // Server-side can also create (API routes)
      allow create: if (
        (isAuthenticated() && (
          (request.resource.data.userId == request.auth.uid && request.resource.data.status == "pending") ||
          (request.resource.data.email == request.auth.token.email && request.resource.data.status == "pending")
        ))
        || request.auth == null // Server-side creates (API routes)
      );
      
      // Users can update their own application only if status is pending
      // Server-side can update any field (for admin actions, linking userId, etc.)
      allow update: if (
        (isAuthenticated() && (
          (resource.data.userId == request.auth.uid && resource.data.status == "pending") ||
          (resource.data.email == request.auth.token.email && resource.data.status == "pending")
        ))
        || request.auth == null // Server-side updates (admin actions, API routes, userId linking)
      );
      
      // No deletions allowed
      allow delete: if false;
    }
    
    // Partners collection - approved business partners
    match /partners/{partnerId} {
      // Partners can read their own partner record (by userId or email), admins can read all
      allow read: if (
        (isAuthenticated() && (
          resource.data.userId == request.auth.uid ||
          resource.data.email == request.auth.token.email
        ))
        || isAdmin() // Allow admin to read all partners
        || request.auth == null // Allow server-side reads (for checkout, etc.)
      );
      
      // Only server-side can create partners (after approval)
      allow create: if request.auth == null;
      
      // Partners can update limited fields (if needed)
      // Server-side can update any field (for admin actions, agreement acceptance, etc.)
      allow update: if (
        (isAuthenticated() && resource.data.userId == request.auth.uid && resource.data.status == "active")
        || request.auth == null // Server-side updates (admin actions)
      );
      
      // No deletions allowed (admin only via server-side)
      allow delete: if false;
    }
    
    // PartnerBookings collection - tracks bookings tied to partners
    match /partnerBookings/{bookingId} {
      // Partners can read their own bookings, admins and operators can read all
      // Server-side can read all (for calculations, etc.)
      allow read: if (
        (isAuthenticated() && resource.data.partnerId != null)
        || isAdminOrOperator() // Allow admin and operator to read all partner bookings
        || request.auth == null
      );
      
      // Only server-side API routes can create/update bookings (from Stripe webhooks)
      allow create, update: if request.auth == null;
      
      // No deletions allowed
      allow delete: if false;
    }
    
    // PartnerPayouts collection - tracks partner payouts
    match /partnerPayouts/{payoutId} {
      // Partners can read their own payouts
      // Server-side can read all (for admin)
      allow read: if (
        (isAuthenticated() && resource.data.partnerId != null)
        || request.auth == null
      );
      
      // Only server-side API routes can create/update payouts
      allow create, update: if request.auth == null;
      
      // No deletions allowed
      allow delete: if false;
    }
    
    // Bookings collection - tracks all orders/bookings with partner info (existing)
    match /bookings/{bookingId} {
      // Users can read bookings linked to them as customer
      // Partners can read bookings linked to them as partner
      // Server-side can read all (for admin, calculations, etc.)
      allow read: if (
        (isAuthenticated() && resource.data.userId == request.auth.uid)
        || (isAuthenticated() && resource.data.partnerId != null)
        || request.auth == null
      );
      
      // Only server-side API routes can create/update bookings (from Stripe webhooks)
      allow create, update: if request.auth == null;
      
      // No deletions allowed
      allow delete: if false;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

